<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta name="description" content="The runtime football scores system">
        <meta name="author" content="">

        <title>@ViewBag.Title - The runtime football scores page</title>

        <!-- Bootstrap core CSS -->
        @Styles.Render("~/Content/css")

        <!-- Custom styles for this template -->
        @Scripts.Render("~/bundles/modernizr")
    </head>

    <body data-twttr-rendered="true">
        <div class="navbar navbar-inverse navbar-fixed-top bs-docs-nav">
            <div class="container">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".bs-navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("SOCCER", "Index", "Home", null, new { @class = "navbar-brand" })
                <div class="nav-collapse collapse bs-navbar-collapse">
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("About", "About", "Home")</li>
                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                    </ul>
                    @Html.Partial("_LoginPartial")
                </div>
            </div>
        </div>
        <div class="container bs-docs-container">
            @RenderBody()

            <footer class="bs-footer">
                <p>&copy; @DateTime.Now.Year - Runtime football scores system</p>
            </footer>
        </div>

        @Scripts.Render("~/bundles/jquery")
        @Scripts.Render("~/bundles/bootstrap")
        @RenderSection("scripts", required: false)
    </body>
</html>